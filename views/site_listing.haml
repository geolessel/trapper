.site_listing
  %span.link_name
    %a{:href => url(site.url)}= site.name
  |
  %a{:href => url("/#{site.id}/edit")} edit
  .description
    = site.description
  .meta
    - site.tags.each do |tag|
      %span.tag
        - include_plus ||= false
        - if include_plus
          - if request.url.match(/(\+?#{tag.name})/)
            %a{:href => "#{request.url.sub(/\+?#{tag.name}/, '')}"} -
          - else
            %a{:href => "#{request.url}+#{tag.name}"} +
        %a{:href => url("/t/#{tag.name}")}= tag.name
    |
    = site.created_at
